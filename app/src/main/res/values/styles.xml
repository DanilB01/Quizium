<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="mainButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">32dp</item>
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="answerButtonStyle">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:background">@drawable/quiz_answers_selector</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/mainColorBlue</item>
    </style>

    <style name="purpleButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/mainColorPurple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="purpleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/mainColorPurple</item>
    </style>

    <style name="purpleTitleTextStyle" parent="purpleTextStyle">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="purpleNameTextStyle" parent="purpleTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BlueTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mainColorBlue</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BlueDescriptionStyle" parent="BlueTextStyle">
        <item name="android:textSize">12sp</item>
    </style>

</resources>